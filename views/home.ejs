<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://i.pinimg.com/474x/25/cd/ff/25cdff24ab518ec9712f2f69fa0b3cfb.jpg">
    <title>CRUD</title>
    
    <style>
        /* Reset Default Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-image: url('https://wallpapercave.com/wp/wp4059913.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(0, 0, 0, 0.8);
            padding: 15px 30px;
        }

        .navbar img {
            width: 100px;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            margin-left: 20px;
            transition: color 0.3s;
        }

        .nav-links a:hover {
            color: #1e90ff;
        }

        /* Container */
        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 25px;
            border-radius: 8px;
            width: 80%;
            margin: 40px auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        h3 {
            margin-bottom: 10px;
            color: #1e90ff;
        }

        /* Form */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn {
            width: 100%;
            padding: 12px;
            background: #1e90ff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn:hover {
            background: #005bbb;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: white;
            border-radius: 5px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #1e90ff;
            color: white;
        }

        tr:hover {
            background: rgba(30, 144, 255, 0.1);
        }

        .edit-btn, .delete-btn {
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        .edit-btn {
            background: #28a745;
            color: white;
        }

        .edit-btn:hover {
            background: #1e7e34;
        }

        .delete-btn {
            background: #dc3545;
            color: white;
        }

        .delete-btn:hover {
            background: #a71d2a;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                text-align: center;
            }

            .nav-links {
                margin-top: 10px;
            }

            .nav-links a {
                display: block;
                margin: 10px 0;
            }

            .container {
                width: 95%;
            }

            input, .btn {
                font-size: 14px;
            }

            table {
                font-size: 14px;
            }
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <div class="navbar">
        <a href="https://www.iplt20.com/">
            <img src="https://imgs.search.brave.com/Scpvwk_pzgaevLd8d33XbWZZqBA2GAaGZVM9VUYc4j8/rs:fit:500:0:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzLzhmL2Fh/LzU1LzhmYWE1NWQ4/ZDRjNWUwNzg5Mjlm/MWIwZjBmOTdkZTc5/LmpwZw" alt="IPL Logo">
        </a>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/blog">Blog</a>
            <a href="/contact">Contact</a>
            <a href="/about">About</a>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <!-- Form -->
        <form action="/add" method="post">
            <div class="form-group">
                <h3>Enter the team name</h3>
                <input type="text" name="name" required>
            </div>
            <div class="form-group">
                <h3>Enter the player name</h3>
                <input type="text" name="players" required>
            </div>
            <div class="form-group">
                <h3>Enter the coach name</h3>
                <input type="text" name="coach" required>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Team Name</th>
                    <th>Players</th>
                    <th>Coach</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% clubs.forEach(function(club){ %>
                    <tr>
                        <td><%= club.name %></td>
                        <td><%= club.players %></td>
                        <td><%= club.coach %></td>
                        <td>
                            <a href="/edit/<%= club._id %>" class="edit-btn">✏ Edit</a>
                        </td>
                        <td>
                            <a href="/delete/<%= club._id %>" class="delete-btn">❌ Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
